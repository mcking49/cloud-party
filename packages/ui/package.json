{
  "name": "@cloud-party/ui",
  "version": "0.1.0",
  "author": {
    "name": "Miten Chauhan",
    "email": "miten@chauhan.nz",
    "url": "https://www.mitenchauhan.com/"
  },
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js"
    },
    "./tailwind": {
      "import": "./dist/tailwind.esm.js",
      "require": "./dist/tailwind.cjs.js",
      "types": "./dist/tailwind.d.ts"
    }
  },
  "sideEffects": false,
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build-package": "tsup",
    "build": "pnpm build-package",
    "dev": "tsup --watch",
    "dev:ui": "pnpm dev",
    "lint": "eslint \"src/**/*.ts*\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "peerDependencies": {
    "@cloud-party/tailwind": "workspace:*",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.3.1"
  },
  "devDependencies": {
    "@cloud-party/tailwind": "workspace:*",
    "@cloud-party/tsconfig": "workspace:*",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.43.0",
    "eslint-config-cloud-party": "workspace:*",
    "postcss": "^8.4.24",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.2",
    "tsup": "^6.7.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.15",
    "@headlessui/tailwindcss": "^0.1.3",
    "@heroicons/react": "^2.0.18",
    "clsx": "^1.2.1"
  }
}
