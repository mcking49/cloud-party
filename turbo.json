{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "outputs": ["dist/**", ".next/**", "storybook-static/**"]
    },
    "clean": {
      "cache": false
    },
    "//#clean": {
      "cache": false
    },
    "db:generate": {
      "cache": false,
      "inputs": ["prisma/schema.prisma"]
    },
    "db:push": {
      "cache": false,
      "inputs": ["prisma/schema.prisma"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:ui": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "lint:fix": {},
    "type-check": {
      "dependsOn": ["^db:generate", "^build"],
      "cache": false
    }
  },
  "globalEnv": [
    "CHROMATIC_PROJECT_TOKEN",
    "CI",
    "DATABASE_URL",
    "DISCORD_CLIENT_ID",
    "DISCORD_CLIENT_SECRET",
    "NEXT_PUBLIC_FLAGSMITH_ENV_KEY",
    "NODE_ENV",
    "SKIP_ENV_VALIDATION",
    "VERCEL_URL",
    "VERCEL"
  ]
}
